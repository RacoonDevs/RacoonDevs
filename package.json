{
  "name": "racoondevs-monorepo",
  "version": "1.0.0",
  "description": "RacoonDevs Landing Page - Full Stack Application",
  "private": true,
  "scripts": {
    "install-all": "cd front && npm install && cd ../back && npm install",
    "dev": "concurrently \"npm run dev:front\" \"npm run dev:back\"",
    "dev:front": "cd front && npm run dev",
    "dev:back": "cd back && npm run dev",
    "build": "cd front && npm run build",
    "build:front": "cd front && npm run build",
    "preview": "cd front && npm run preview",
    "start": "cd back && npm start",
    "start:prod": "cd back && NODE_ENV=production npm start",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js",
    "deploy:setup": "npm run build:front && npm run pm2:start",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "racoondevs",
    "landing-page",
    "react",
    "express",
    "contact-form"
  ],
  "author": "RacoonDevs",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
